<%- layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3 mt-3">Login</h1>
    <br /><br /><br />
    <div class="col-6 mt-3 offset-2">
        <div class="card card-sm">
            <div class="card-body">
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input 
                            name="username" 
                            id="username"
                            type="text" 
                            class="form-control"
                            required
                        />
                    </div>

                
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input 
                            name="password" 
                            id="password"
                            type="password" 
                            class="form-control"
                            required
                        />
                    </div>
                    
                    <div class="button-container">
                        <button class="btn custom-signup-btn" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>